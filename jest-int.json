{
  "moduleFileExtensions": [
    "js",
    "json",
    "ts"
  ],
  "rootDir": ".",
  "testEnvironment": "node",
  "testRegex": ".int-spec.ts$",
  "transform": {
    "^.+\\.(t|j)s$": "ts-jest"
  },
  "moduleNameMapper": {
    "src/(.*)": "<rootDir>/src/$1",
    "@connectors/connectors/(.*)": "<rootDir>/../libs/connectors/src/$1",
    "@connectors/connectors": "<rootDir>/../libs/connectors/src",
    "@common/common/(.*)": "<rootDir>/../libs/common/src/$1",
    "@common/common": "<rootDir>/../libs/common/src"
  }
}